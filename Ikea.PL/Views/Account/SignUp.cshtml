
@model SignupViewModel


@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>SignUp</h1>


<div class="main-agileinfo">

	<div class="agileits-top">


		
		<form asp-action="SignUp" method="post">



			<input class="text" style="margin-bottom:10px;" placeholder="Firstname" asp-for="FirstName" required="">
			<input class="text" style="margin-bottom:10px;" placeholder="LastName" asp-for="LastName" required="">
			<input class="text" style="margin-bottom:10px;" placeholder="UserName" asp-for="UserName" required="">



			<input class="text email" style="margin-bottom:10px;" asp-for="Email"  placeholder="Email" required="">


			<input class="text" style="margin-bottom:10px;" type="password" asp-for="Password"  placeholder="Password" required="">
			<input class="text w3lpass" style="margin-bottom:10px;" asp-for="ConfirmPassword" type="password"  placeholder="Confirm Password" required="">
			
			
			<div class="wthree-text">
			<label class="anim">
					<input type="checkbox" asp-for="IsAgree" class="checkbox" required="">
					<span>I Agree To The Terms & Conditions</span>
			</label>
				<div class="clear"> </div>
			</div>



			<div asp-validation-summary="ModelOnly"></div>
			<input type="submit" value="SIGNUP">
		</form>
		<p>Don't have an Account? <a href="/Account/LogIn"> Login Now!</a></p>
	</div>
</div>